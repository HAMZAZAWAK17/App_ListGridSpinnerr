<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_overlay"
        android:padding="24dp">

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="ðŸ‡²ðŸ‡¦ DÃ©couvrez le Maroc"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Explorez les merveilles du royaume"
            android:textSize="16sp"
            android:textColor="#E0E0E0"
            android:gravity="center"
            android:alpha="0.9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appTitle" />

        <!-- Liste Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBtnList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appSubtitle">

            <Button
                android:id="@+id/btnList"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_gradient"
                android:text="ðŸ“‹ Liste"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:drawablePadding="12dp"
                android:elevation="0dp"
                android:stateListAnimator="@null" />
        </androidx.cardview.widget.CardView>

        <!-- Spinner Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBtnSpin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardBtnList">

            <Button
                android:id="@+id/btnSpin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_gradient_green"
                android:text="ðŸ”„ Spinner"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:drawablePadding="12dp"
                android:elevation="0dp"
                android:stateListAnimator="@null" />
        </androidx.cardview.widget.CardView>

        <!-- Grid Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBtnGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardBtnSpin">

            <Button
                android:id="@+id/btnGrid"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_gradient_orange"
                android:text="âŠž Grid"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:drawablePadding="12dp"
                android:elevation="0dp"
                android:stateListAnimator="@null" />
        </androidx.cardview.widget.CardView>

        <!-- Image List Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBtnImageList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardBtnGrid">

            <Button
                android:id="@+id/btnImageList"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_gradient_blue"
                android:text="ðŸ–¼ï¸ Liste Image"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:drawablePadding="12dp"
                android:elevation="0dp"
                android:stateListAnimator="@null" />
        </androidx.cardview.widget.CardView>

        <!-- Drawer Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBtnDrawer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardBtnImageList"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btnDrawer"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_gradient_gold"
                android:text="â˜° Menu Drawer"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:drawablePadding="12dp"
                android:elevation="0dp"
                android:stateListAnimator="@null" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>