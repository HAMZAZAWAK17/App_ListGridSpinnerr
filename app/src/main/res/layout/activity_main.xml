<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Video Background -->
    <VideoView
        android:id="@+id/backgroundVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <!-- Dark Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"/>

    <!-- Content Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp">

        <!-- Logo -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logoCard"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="90dp"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Logo"
                android:src="@drawable/logo"/>

        </androidx.cardview.widget.CardView>

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="DÃ©couvrez le Maroc"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:shadowColor="#DD000000"
            android:shadowDx="0"
            android:shadowDy="6"
            android:shadowRadius="16"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.03"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoCard" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Explorez les merveilles du royaume"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="8"
            android:fontFamily="sans-serif-light"
            android:alpha="0.95"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appTitle" />

        <!-- Features Icons -->
        <LinearLayout
            android:id="@+id/featuresLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appSubtitle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ—ºï¸"
                android:textSize="32sp"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¸"
                android:textSize="32sp"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›ï¸"
                android:textSize="32sp"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒŸ"
                android:textSize="32sp"
                android:padding="12dp"/>

        </LinearLayout>

        <!-- Let's Started Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/startButtonCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.75">

            <Button
                android:id="@+id/btnLetsStart"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_gradient"
                android:text="Let's Started âžœ"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.05"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:stateListAnimator="@null" />

        </androidx.cardview.widget.CardView>

        <!-- Swipe Up Indicator -->
        <TextView
            android:id="@+id/swipeIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Swipe up to explore â†‘"
            android:textSize="14sp"
            android:textColor="#CCFFFFFF"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>