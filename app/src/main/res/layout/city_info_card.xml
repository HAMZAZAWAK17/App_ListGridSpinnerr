<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cityInfoCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp">

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/btnCloseCard"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Fermer"
            android:tint="#666666"/>

        <!-- City Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/cityImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Image de la ville"/>

        </androidx.cardview.widget.CardView>

        <!-- City Title -->
        <TextView
            android:id="@+id/cityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nom de la ville"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:gravity="center"/>

        <!-- City Description -->
        <TextView
            android:id="@+id/cityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Description de la ville"
            android:textSize="15sp"
            android:textColor="#424242"
            android:lineSpacingExtra="4dp"
            android:gravity="start"/>

        <!-- Image Gallery Section -->
        <TextView
            android:id="@+id/galleryLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ðŸ“¸ Galerie d'images"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:gravity="center"/>

        <!-- Image Gallery with Navigation -->
        <androidx.cardview.widget.CardView
            android:id="@+id/galleryContainer"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- ViewPager2 for image gallery -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/imageViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <!-- Left Navigation Button -->
                <ImageButton
                    android:id="@+id/btnPrevImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_media_previous"
                    android:contentDescription="Image prÃ©cÃ©dente"
                    android:alpha="0.7"
                    android:scaleType="fitCenter"/>

                <!-- Right Navigation Button -->
                <ImageButton
                    android:id="@+id/btnNextImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_media_next"
                    android:contentDescription="Image suivante"
                    android:alpha="0.7"
                    android:scaleType="fitCenter"/>

                <!-- Image Counter -->
                <TextView
                    android:id="@+id/imageCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:background="#80000000"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="1 / 6"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
