<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cityInfoCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp">

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/btnCloseCard"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Fermer"
            android:tint="#666666"/>

        <!-- City Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/cityImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Image de la ville"/>

        </androidx.cardview.widget.CardView>

        <!-- City Title -->
        <TextView
            android:id="@+id/cityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nom de la ville"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:gravity="center"/>

        <!-- City Description -->
        <TextView
            android:id="@+id/cityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Description de la ville"
            android:textSize="15sp"
            android:textColor="#424242"
            android:lineSpacingExtra="4dp"
            android:gravity="start"/>

        <!-- Video Section -->
        <TextView
            android:id="@+id/videoLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ðŸŽ¥ VidÃ©o de prÃ©sentation"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:gravity="center"/>

        <!-- Video Player -->
        <androidx.cardview.widget.CardView
            android:id="@+id/videoContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <VideoView
                    android:id="@+id/cityVideoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <!-- Play/Pause Overlay -->
                <ImageButton
                    android:id="@+id/btnPlayPause"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@android:drawable/ic_media_play"
                    android:contentDescription="Lecture/Pause"
                    android:alpha="0.8"/>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
